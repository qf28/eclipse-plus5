+		int x = 0;
+		for (int i = 0; i < MUL; i++)
+			for (int j = 0; j < MUL; j++)
+				for (int k = 0; k < MUL; k++)
+					versions[x++] = new Version(i, j, k, qualifierTemplate.substring(0, k + 1));
